{
  "name": "jsonck",
  "version": "1.0.1",
  "description": "Validate JSON files against JSON schemas. Supports stdin, batch, local/remote schemas, and structured JSON output.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jsonck": "dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "json",
    "validator",
    "schema",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/waldekmastykarz/jsonck"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "commander": "^14.0.3",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^25.2.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
